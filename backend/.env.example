# ===========================================
# Server Configuration
# ===========================================
PORT=3001
NODE_ENV=development

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgres://postgres:postgres@localhost:5432/tokenized_funds

# Optional: PostgreSQL credentials (if not using DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tokenized_funds
DB_USER=postgres
DB_PASSWORD=postgres

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ===========================================
# Blockchain Configuration
# ===========================================

# RPC URL for blockchain connection
# Local: http://127.0.0.1:8545
# Polygon Amoy: https://polygon-amoy.g.alchemy.com/v2/your-api-key
# Polygon Mainnet: https://polygon-mainnet.g.alchemy.com/v2/your-api-key
RPC_URL=http://127.0.0.1:8545

# Private key for signing transactions (deployer/admin wallet)
# WARNING: Never commit your actual private key!
# For local dev, use Hardhat default account #0
DEPLOYER_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Expected chain ID (for validation)
# Local: 1337
# Polygon Amoy: 80002
# Polygon Mainnet: 137
CHAIN_ID=1337

# ===========================================
# Optional: Gas Configuration
# ===========================================

# Max gas price in gwei (for mainnet cost control)
MAX_GAS_PRICE_GWEI=100

# Gas limit multiplier (1.2 = 20% buffer)
GAS_LIMIT_MULTIPLIER=1.2
